sudo apt-get install -y python-pygame

touch party-game.desktop

STRING='[Desktop Entry]\nEncoding=UTF-8\nVersion=1.0\nType=Application\nTerminal=false\nExec=python '$PWD'/party.py\nIcon='$PWD'/data/party-tanya.png\nName=party-game.desktop'

echo $STRING >> party-game.desktop

chmod u+x party-game.desktop
